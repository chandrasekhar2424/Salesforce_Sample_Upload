<apex:page standardController="Account">
  <apex:form >
      <apex:pageMessages ></apex:pageMessages>
      <apex:pageMessage severity="error"></apex:pageMessage>
    Name: <apex:inputText value="{!Account.Name}" required="true"/><br/>
    Account Number<apex:inputText value="{!Account.AccountNumber}"/><br/>
    Parent: <apex:inputField value="{!Account.ParentId}"/><br/>
    Type: <apex:inputField value="{!Account.Type}"/><br/>
    Description <apex:inputField value="{!Account.Description}"/><br/>
    <apex:commandButton value="save" action="{!save}"/>
  
  </apex:form>
</apex:page>